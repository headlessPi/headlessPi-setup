#!/bin/bash

# Make sure only root can run our script
if [ "$(id -u)" != "0" ]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

lockfile=/var/lock/update-headlesspi

if ( set -o noclobber; echo "$$" > "$lockfile") 2> /dev/null; then

  trap 'rm -f "$lockfile"; exit $?' INT TERM EXIT
  
  echo "================================" >> /var/log/ansible
  sudo ansible-pull -o -C master -d /usr/local/headlessPi/setup -i /usr/local/headlessPi/setup/hosts -U https://github.com/headlessPi/headlessPi-setup.git --extra-vars "upgrade_val=${1:-false}" &>> /var/log/ansible

  # clean up after yourself, and release your trap
  rm -f "$lockfile"
  trap - INT TERM EXIT
else
  echo "Lock Exists: $lockfile owned by $(cat $lockfile)"
fi
